{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@total-typescript/tsconfig/tsc/dom/library",
  "compilerOptions": {
    "customConditions": ["@systemfsoftware/source"],
    "paths": {
      "@/test-module": ["./src/__example-files__/test-module"],
      "next-plugin-preval": ["./src"]
    }
  },
  "exclude": ["**/*.test.ts", "**/*/__example-files__/**/*"],
  "include": ["src/**/*"]
}
